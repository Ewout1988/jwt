<?xml version='1.0' encoding='utf-8'?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	
	<persistence-unit name="auth1">
	<provider>org.hibernate.ejb.HibernatePersistence</provider> 
	
		<properties>
			<!-- Database connection settings -->
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/jwtauth1" />
			<property name="hibernate.connection.username" value="jwt" />
			<property name="hibernate.connection.password" value="jwt" />

			<!-- JDBC connection pool (use the built-in) -->
			<property name="hibernate.connection.pool_size" value="1" />

			<!-- SQL dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />

			<!-- Disable the second-level cache  -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
		</properties>
	</persistence-unit>
</persistence>